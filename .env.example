# ===========================================
# PROJECT CONFIGURATION
# ===========================================
# USER OFFSET SYSTEM
# Set your user offset to automatically avoid port conflicts
# Each user should choose a unique offset value (0, 100, 200, 300, etc.)
# Then calculate ports using: BASE_PORT + USER_OFFSET
USER_OFFSET=0

# Unique project name to avoid container/network/volume conflicts
# Change this for each deployment on shared VPS
PROJECT_NAME=penguins_user1

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
ENVIRONMENT=production
LOG_LEVEL=info

# ===========================================
# PORT CONFIGURATION
# ===========================================
# FORMULA: BASE_PORT + USER_OFFSET
# Update these values when changing USER_OFFSET above
#
# Base ports:
#   MongoDB:   27017
#   Cassandra: 9042
#   Redis:     6379
#   API:       8000
#   Frontend:  3000

# MongoDB port (base: 27017)
MONGO_PORT=27017

# Cassandra port (base: 9042)
CASSANDRA_PORT=9042

# Redis port (base: 6379)
REDIS_PORT=6379

# API Backend port (base: 8000)
API_PORT=8000

# Frontend port (base: 3000)
FRONTEND_PORT=3000

# ===========================================
# DATABASE VERSIONS
# ===========================================
MONGO_VERSION=7.0
CASSANDRA_VERSION=4.1
REDIS_VERSION=7.2-alpine

# ===========================================
# DATABASE NAMES
# ===========================================
MONGO_DATABASE=penguins
CASSANDRA_KEYSPACE=penguins_keyspace
CASSANDRA_CLUSTER_NAME=PenguinsCluster
CASSANDRA_DATACENTER=dc1
CASSANDRA_RACK=rack1

# ===========================================
# RESOURCE LIMITS
# ===========================================
CASSANDRA_MAX_HEAP=512M
CASSANDRA_HEAP_NEWSIZE=100M
REDIS_MAX_MEMORY=256mb

# ===========================================
# API CONFIGURATION
# ===========================================
UVICORN_ARGS=--workers 2
REACT_APP_API_URL=http://localhost:8000

